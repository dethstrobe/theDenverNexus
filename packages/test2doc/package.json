{
  "name": "test2doc",
  "version": "0.0.1",
  "description": "A reporter that generates docs based off playwright test files",
  "keywords": ["docs", "test", "playwright", "automation"],
  "license": "GPL-3.0-or-later",
  "author": "@dethstrobe",
  "type": "commonjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },

      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },

      "default": "./dist/cjs/index.js"
    },

    "./utils": {
      "import": {
        "types": "./dist/esm/utils.d.ts",
        "default": "./dist/esm/utils.js"
      },
      "require": {
        "types": "./dist/cjs/utils.d.ts",
        "default": "./dist/cjs/utils.js"
      },
      "default": "./dist/cjs/utils.js"
    },

    "./*": {
      "types": "./dist/*/index.d.ts",
      "default": "./dist/*/index.js"
    }
  },

  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",

  "files": ["dist"],
  "scripts": {
    "clean": "rm -rf dist",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "pnpm run clean && pnpm run build:cjs && pnpm run build:esm",
    "test": "vitest",
    "lint": "biome lint .",
    "format": "biome format --write ."
  }
}
