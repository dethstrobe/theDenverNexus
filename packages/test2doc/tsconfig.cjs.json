{
  "extends": "./tsconfig.json", // Extend your base tsconfig for common options
  "compilerOptions": {
    "module": "commonjs",      // Emit CommonJS modules
    "outDir": "./dist/cjs",    // Output to a 'cjs' subdirectory
    "declaration": true,       // Still generate declarations
    "declarationMap": true,     // Still generate declaration maps
    "composite": true        // Keep composite if you use project references
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}